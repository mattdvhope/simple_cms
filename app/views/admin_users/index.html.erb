<% @page_title = "Admin Users Menu" %>

<%= link_to("<< Back to Menu", {controller: 'access', action: 'index'}, :class => 'back-link') %>

<div class="admin_user index">
  <h2>Users Menu</h2>

  <%= link_to(image_tag('plus_sign.png', size:'11x11', alt: '+') + " Add New Admin User", {action: 'new'}, :class => 'action new') %>

  <div><%= pluralize(@admin_users.size, 'admin user') %> found</div>

  <table class="listing" summary="Admin users list">
    <tr>
      <th>Username</th>
      <th>Name</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
    <% @admin_users.each do |user| %>
    <tr class="<%= cycle('odd', 'even') %>">
      <td><%= user.username %></td>
      <td><%= user.name %></td>
      <td><%= mail_to(user.email) %></td>
      <td class="actions">
        <%= link_to("Edit", {action: 'edit', id: user.id}, :class => 'action edit') %>
        <%= link_to("Delete", {action: 'delete', id: user.id}, :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>